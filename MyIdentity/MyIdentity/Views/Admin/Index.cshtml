@model IEnumerable<AppUser>

<div class="bg-primary panel-body">
    <h4>User Accounts</h4>
</div>
<br/>
<table class="table table-condensed table-bordered">
    <thead>
    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Email</td>
    </tr>
    </thead>
    <tbody>
    @if (!Model.Any())
    {
        <tr>
            <td colspan="3" class="text-center">No User Accounts</td>
        </tr>
    }
    else
    {
        foreach (var appUser in Model)
        {
            <tr>
                <td>@appUser.Id</td>
                <td>@appUser.UserName</td>
                <td>@appUser.Email</td>
            </tr>
        }
    }
    </tbody>
</table>
<br/>
<a class="btn btn-primary" asp-controller="Admin" asp-action="Create"></a>